<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Featured</th>
      <th>Ingredients</th>
      <th>Steps</th>
      <th>Submite date</th>
      <th>Image url</th>
      <th>Category</th>
      <th>Author</th>
      <th>Recipe type</th>
      <th>Category name</th>
      <th>Recipe type name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name recipe.author.name%></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.featured %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.steps %></td>
        <td><%= recipe.submite_date %></td>
        <td><%= recipe.image_url %></td>
        <td><%= recipe.category_id %></td>
        <td><%= recipe.author_id %></td>
        <td><%= recipe.recipe_type_id %></td>
        <td><%= recipe.category.name unless recipe.category.nil? %></td>
        <td><%= recipe.recipe_type.name unless recipe.recipe_type.nil? %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

